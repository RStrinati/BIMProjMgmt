# BIM Project Management System - Environment Configuration Template
# Copy this file to .env and update with your actual values
# This file can be committed to version control as a template

# ==============================================================================
# CRITICAL: Database Credentials (REQUIRED - No Defaults)
# ==============================================================================
# These MUST be set or the application will not start
DB_USER=your_database_username_here
DB_PASSWORD=your_secure_password_here

# ==============================================================================
# Security Configuration (REQUIRED for Production)
# ==============================================================================
# Comma-separated list of allowed origins for CORS
# Development: http://localhost:5173,http://localhost:3000
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use INFO in production, DEBUG only for development
LOG_LEVEL=DEBUG

# ==============================================================================
# Database Configuration (Optional - Have Defaults)
# ==============================================================================
# SQL Server instance (default: .\SQLEXPRESS)
DB_SERVER=.\SQLEXPRESS

# ODBC Driver version
DB_DRIVER=ODBC Driver 17 for SQL Server

# Database names
PROJECT_MGMT_DB=ProjectManagement
WAREHOUSE_DB=ProjectManagement
ACC_DB=acc_data_schema
REVIT_HEALTH_DB=RevitHealthCheckDB
REVIZTO_DB=ReviztoData

# ==============================================================================
# External Service Endpoints (Optional)
# ==============================================================================
# Autodesk Construction Cloud (ACC) Service
ACC_SERVICE_URL=http://localhost:4000/api/v1
ACC_SERVICE_TOKEN=

# Revizto Service
REVIZTO_SERVICE_URL=http://localhost:5000/api/v1
REVIZTO_SERVICE_TOKEN=

# Autodesk Platform Services (APS) Authentication
APS_AUTH_SERVICE_URL=http://localhost:3000
APS_AUTH_LOGIN_PATH=/login-pkce

# ==============================================================================
# Logging Configuration (Optional)
# ==============================================================================
# Enable JSON-formatted logs (true/false)
LOG_JSON=false
